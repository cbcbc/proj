<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cb.eshop.dao.interfaces.IUserDao">

    <resultMap id="UserMap" type="com.cb.eshop.model.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="role_type" property="roleType" jdbcType="BIGINT" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="phone_number" property="phoneNumber" jdbcType="VARCHAR" />
        <result column="address" property="address" jdbcType="VARCHAR" />
    </resultMap>

    <select id="selectUserByUsername" parameterType="java.lang.String" resultMap="UserMap">
        SELECT * FROM t_user
        WHERE username = #{username}
    </select>

</mapper>